{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "strict": true,
    "sourceMap": true,
    "target": "ES2021",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@core/*": ["core/*"],
      "#grpc/*": ["grpc/*"]
    }
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
