{
  "compilerOptions": {
    "module": "ESNext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2022"],
    "noImplicitAny": false
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
